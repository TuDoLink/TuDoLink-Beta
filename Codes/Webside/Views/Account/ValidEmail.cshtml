
@{
    ViewBag.Title = "ValidEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" style="padding:100px 0 320px;">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-xs-12">
            <div id="verify-email-success" class="alert alert-success" role="alert" style="display: none">
            </div>
            <div id="verify-email-alert" class="alert alert-danger" role="alert" style="display: none">
            </div>
            <h1>Verify your email </h1>
            <p>We have sent an email to your specified email.Please click the link to confirm your email address, then refresh this page.</p>
            <input id="resend-verification-email-btn" type="button" value="Send the message again" class="btn  btn-info btn-lg px-5">
        </div>
    </div><!--.row-->
</div>


@section PageSpecificJavascriptIncludes{

    <script type="text/javascript">

        $(function () {
            $('#resend-verification-email-btn').click(function () {
                $.post('ValidEmail', {}, function (data) {
                    if (data.success) {
                        alert('Send successful!');
                    } else {
                        alert('Send failure!');
                    }
                })
            });
        });

    </script>

}


